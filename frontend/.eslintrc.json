{
    "root": true,
    "overrides": [
      {
        "files": ["*.ts"],
        "extends": [
          "eslint:recommended",
          "plugin:@angular-eslint/recommended",
          "plugin:prettier/recommended"
        ],
        "parserOptions": {
          "project": ["tsconfig.json"],
          "createDefaultProgram": true
        },
        "rules": {
          "prettier/prettier": ["error"],
          "no-console": "warn",
          "eqeqeq": "error"
        }
      },
      {
        "files": ["*.html"],
        "extends": ["plugin:@angular-eslint/template/recommended"]
      }
    ]
  }
  